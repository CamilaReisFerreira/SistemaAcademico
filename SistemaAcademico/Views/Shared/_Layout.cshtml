<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <title>@ViewData["Title"] - Gestão de Projetos</title>
    @RenderSection("styles", false)
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-2 col-md-3 bg-success">
                <ul class="nav nav-pills nav-stacked">
                    <li id="liAlunos" role="presentation">@Html.ActionLink("Alunos", "Index", "Aluno", new { area = "" }, null)</li>
                    <li id="liCidades" role="presentation">@Html.ActionLink("Cidades", "Index", "Cidade", new { area = "" }, null)</li>
                    <li id="liCursos" role="presentation">@Html.ActionLink("Cursos", "Index", "Curso", new { area = "" }, null)</li>
                    <li id="liDisciplinas" role="presentation">@Html.ActionLink("Disciplinas", "Index", "Disciplina", new { area = "" }, null)</li>
                    <li id="liRegistroAcademico" role="presentation">@Html.ActionLink("Registro Acadêmico", "Index", "RegistroAcademico", new { area = "" }, null)</li>
                </ul>
            </div>
            <div class="col-xs-12 col-sm-10 col-md-9">
                <br />
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/lib/jquery/dist/jquery.js")"></script>
    <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
